{
  "manifest_version": 3,
  "name": "Simple To-Do",
  "description": "A minimal to-do list in your browser toolbar",
  "version": "1.0",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    }
  },
  "permissions": ["storage"]
}